<Window x:Class="Planner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Planner"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="800" WindowStyle="None" WindowStartupLocation="CenterScreen">
    <DockPanel LastChildFill="True">
        <DockPanel DockPanel.Dock="Top"
                   LastChildFill="True"
                   x:Name="Header"
                   Height="35"
                   MouseLeftButtonDown="StackPanel_MouseLeftButtonDown">
            <TextBlock DockPanel.Dock="Left"
                        x:Name="Logo"
                        Text="Planner"
                        Margin="10 0"
                        FontSize="24"
                        FontWeight="Bold"
                        FontFamily="Luminari"
                        VerticalAlignment="Center">
            </TextBlock>
            <Grid DockPanel.Dock="Right"
                        x:Name="ControlButtons"
                        Margin="5 0"
                        Width="120"
                        VerticalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Button Grid.Column="0"
                        Style="{StaticResource ControlButtonsStyle}"
                        Click="SettingsButton_Click">
                    <Image Source="/Resources/settings.png"
                       Style="{StaticResource ControlButtonsImageStyle}"
                       ToolTip="Настройки"/>
                </Button>
                <Button Grid.Column="1"
                        Style="{StaticResource ControlButtonsStyle}"
                        Click="MinimizeButton_Click">
                    <Image Source="/Resources/minimize_blue.png"
                       Style="{StaticResource ControlButtonsImageStyle}"
                       ToolTip="Свернуть"/>
                </Button>
                <Button Grid.Column="2"
                        Style="{StaticResource ControlButtonsStyle}"
                        Click="CloseButton_Click">
                    <Image Source="/Resources/exit.png"
                       Style="{StaticResource ControlButtonsImageStyle}"
                       ToolTip="Выход"/>
                </Button>
            </Grid>
            <TextBlock/>
        </DockPanel>
        <DockPanel DockPanel.Dock="Bottom"
                   x:Name="Footer"
                   Background="Blue"
                   Height="50"
                    >
        </DockPanel>
        <Grid DockPanel.Dock="Top"
              x:Name="Content"
              Background="Gray"
              />
    </DockPanel>
</Window>
